# Server Configuration
NODE_ENV=development
PORT=4000

# CORS Configuration
# Comma-separated list of allowed origins
# Development: http://localhost:3000
# Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ediscovery_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# Backup Encryption (Optional but Recommended for Production)
# AES-256-GCM encryption for database backups
# Generate a key: openssl rand -hex 32
# If not set: backups stored unencrypted with warning
# Example: 9bc26789b9ecc1604786e33c6859cd3d321057fc379eea737f55c51ff6f061d4
BACKUP_ENCRYPTION_KEY=


{
  "name": "ediscovery-backend",
  "version": "1.0.0",
  "description": "Backend API for eDiscovery case management system",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "knex migrate:latest --knexfile config/knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile config/knexfile.js",
    "seed": "knex seed:run --knexfile config/knexfile.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "backup": "node -e \"require('./src/utils/backup').performBackup().then(r => console.log('Result:', r))\"",
    "backup:restore": "node -e \"require('./src/utils/backup').restoreBackup().then(r => console.log('Result:', r))\"",
    "backup:list": "node -e \"require('./src/utils/backup').listBackups().then(b => console.log(JSON.stringify(b, null, 2)))\"",
    "backup:stats": "node -e \"require('./src/utils/backup').getBackupStats().then(s => console.log(JSON.stringify(s, null, 2)))\"",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:scan": "./scripts/security-scan.sh",
    "security:check": "npm outdated && npm audit",
    "security:lint": "eslint . --ext .js --config eslint.security.config.js"
  },
  "keywords": [
    "ediscovery",
    "case-management",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.10",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "validator": "^13.15.23",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}
